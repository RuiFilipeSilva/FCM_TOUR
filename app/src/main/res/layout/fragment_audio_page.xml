<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.AudioPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="271dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnAudio"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rounded_museum"
                    android:elevation="40dp"
                    android:text="Audio"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btnText"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rounded_museum"
                    android:elevation="40dp"
                    android:text="Texto"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btnGallery"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="130dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rounded_museum"
                    android:elevation="40dp"
                    android:text="Galeria"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    app:backgroundTint="@null" />

                <ImageView
                    android:id="@+id/IMG"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:scaleType="fitXY"
                    tools:layout_editor_absoluteX="-16dp"></ImageView>
            </RelativeLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/stratum1_black"
                android:paddingLeft="20dp"
                android:text="MUSEU"
                android:textColor="@color/black"
                android:textSize="26dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="6"
                    android:fontFamily="@font/barlow_light"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    tools:layout_editor_absoluteX="0dp" />
            <LinearLayout
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_weight="4">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/audioPageFrame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="end"
        android:elevation="40dp"
        android:layout_gravity="center_vertical"
        >

        <Button
            android:id="@+id/images"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="180dp"
            android:text="TxT" />

        <Button
            android:id="@+id/audio"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/images"
            android:layout_marginBottom="-15dp"
            android:backgroundTint="@color/purple_200"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/audio"
            android:layout_marginBottom="-15dp"
            android:backgroundTint="@color/grey"/>
    </RelativeLayout>

</FrameLayout>