<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.AudioPage">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="271dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/IMG"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scaleType="fitXY"
                tools:layout_editor_absoluteX="-16dp"></ImageView>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/stratum1_black"
                android:paddingLeft="20dp"
                android:text="MUSEU"
                android:textColor="@color/black"
                android:textSize="26dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"></LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/audioPageFrame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:elevation="40dp"
        android:gravity="end"
        android:orientation="vertical">

        <Button
            android:id="@+id/images"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/audio"
            android:background="@drawable/botao_da_galeria_grey"
            android:textColor="@color/white"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/audio"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtBtn"
            android:layout_marginBottom="-10dp"
            android:background="@drawable/botao_audio_dgrey"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/txtBtn"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="400dp"
            android:layout_marginBottom="-10dp"
            android:background="@drawable/botao_descricao_amarelo"
            app:backgroundTint="@null" />
    </RelativeLayout>

</FrameLayout>