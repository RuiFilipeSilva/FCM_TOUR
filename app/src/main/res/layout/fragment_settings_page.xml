<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.SettingsPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp">


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profilePicture"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="60dp"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />


            <ImageButton
                android:id="@+id/editImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/profilePicture"
                android:src="@drawable/asset_1"
                android:background="@null"
                android:scaleType="centerCrop"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="-95dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/username"
                android:layout_marginBottom="0dp"
                android:background="#CDCDCD" />

            <androidx.cardview.widget.CardView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/profilePicture"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/barlow_medium"
                    android:padding="5dp"
                    android:text="Username" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/barlow_light"
                    android:padding="5dp"
                    android:text="Username" />
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/username"
                android:layout_marginBottom="0dp"
                android:background="#CDCDCD" />


            <androidx.cardview.widget.CardView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/username"

                app:cardElevation="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/barlow_medium"
                    android:padding="5dp"
                    android:text="E-mail" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/barlow_light"
                    android:padding="5dp"
                    android:text="username@gmail.com" />

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/password"
                android:layout_marginBottom="0dp"
                android:background="#CDCDCD" />

            <androidx.cardview.widget.CardView
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/email"
                android:layout_marginBottom="100dp"

                android:clickable="true"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/barlow_medium"
                    android:padding="5dp"
                    android:text="Palavra-passe" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/barlow_light"
                    android:inputType="textPassword"
                    android:padding="5dp"
                    android:text="Username" />
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/password"
                android:layout_marginBottom="0dp"
                android:background="#CDCDCD" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_above="@+id/remove"
                android:layout_marginBottom="0dp"
                android:background="#CDCDCD" />

            <androidx.cardview.widget.CardView
                android:id="@+id/remove"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/password"
                android:clickable="true"

                app:cardElevation="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/barlow_medium"
                    android:padding="5dp"
                    android:text="Terminar SessÃ£o"
                    android:textColor="#F33939" />

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/remove"
                android:layout_marginBottom="0dp"
                android:background="#CDCDCD" />

            <androidx.cardview.widget.CardView
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/remove"
                app:cardElevation="0dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/barlow_medium"
                    android:padding="5dp"
                    android:text="Eliminar Conta"
                    android:textColor="#F33939" />
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignBottom="@+id/delete"
                android:layout_marginBottom="0dp"
                android:background="#CDCDCD" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>