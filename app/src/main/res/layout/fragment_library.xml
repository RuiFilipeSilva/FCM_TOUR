<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Views.Library">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="271dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnCollections"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/rounded_tower"
                    android:fontFamily="@font/barlow_medium"
                    android:elevation="40dp"
                    android:text="@string/collectionsBtn"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    app:backgroundTint="@color/library" />

                <ImageView
                    android:id="@+id/cover"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:scaleType="fitXY"
                    tools:layout_editor_absoluteX="-16dp"></ImageView>
            </RelativeLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/stratum1_black"
                android:paddingLeft="20dp"
                android:text="@string/libraryTitle"
                android:textColor="@color/black"
                android:textSize="26dp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="3dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rec"
                android:backgroundTint="@color/library" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/barlow_light"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                tools:layout_editor_absoluteX="0dp" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>