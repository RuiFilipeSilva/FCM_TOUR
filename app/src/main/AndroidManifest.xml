<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.fcm_tour">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FCM_TOUR">
        <activity android:name=".SideBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Library" />
        <activity android:name=".Music" />
        <activity android:name=".Museum" />
        <activity android:name=".Tower" />
        <activity android:name=".Login2">
            <intent-filter
                android:autoVerify="true"
                android:label="fcm_tour">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="fcm-tour.herokuapp.com"
                    android:path="/login"
                    android:scheme="https" />
                <data
                    android:host="fcm-tour.herokuapp.com"
                    android:path="/login"
                    android:scheme="http" />
                <data
                    android:host="fcm-tour.herokuapp.com"
                    android:path="/auth/facebook/callback"
                    android:scheme="https" />
                <data
                    android:host="fcm-tour.herokuapp.com"
                    android:path="/auth/facebook/callback"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity android:name=".Register" />
        <activity android:name=".Authentication" />
        <activity android:name=".SampleHTTP" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>