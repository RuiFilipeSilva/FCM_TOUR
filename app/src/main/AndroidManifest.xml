<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.fcm_tour">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_fcm_tour"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FCM_TOUR">
        <activity android:name=".Homepage"></activity>
        <activity android:name=".SideBar"></activity>
        <activity android:name=".Library" />
        <activity android:name=".Music" />
        <activity android:name=".Museum" />
        <activity android:name=".Tower" />
        <activity android:name=".Views.Login2"></activity>
        <activity android:name=".Views.Register" />
        <activity android:name=".Views.Authentication" />
        <activity android:name=".SampleHTTP" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/FB_APP_ID" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"/>
    </application>

</manifest>